<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EmployeeShowActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#08E1EA"
            android:orientation="horizontal"
            android:paddingLeft="50dp"
            android:paddingTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="2dp">

            <TextView
                android:id="@+id/employee_show_name"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="name"
                tools:layout_editor_absoluteX="27dp"
                tools:layout_editor_absoluteY="31dp" />

            <TextView
                android:id="@+id/employee_show_employeebranch"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="employeebranch"
                tools:layout_editor_absoluteX="211dp"
                tools:layout_editor_absoluteY="31dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#08E1EA"
            android:orientation="horizontal"
            android:paddingLeft="50dp"
            android:paddingTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="2dp">

            <TextView
                android:id="@+id/employee_show_telephone"
                android:layout_width="160dp"
                android:layout_height="43dp"
                android:ems="10"
                android:focusableInTouchMode="false"
                android:text="telephone"
                tools:layout_editor_absoluteX="27dp"
                tools:layout_editor_absoluteY="111dp" />

            <TextView
                android:id="@+id/employee_show_email"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:focusableInTouchMode="false"
                android:text="email"
                tools:layout_editor_absoluteX="214dp"
                tools:layout_editor_absoluteY="109dp" />
        </LinearLayout>
    </LinearLayout>

<!--    <ScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content">-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="工资信息"/>

        <ListView
            android:id="@+id/employee_show_salary"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:paddingBottom="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="考勤信息"/>

        <ListView
            android:id="@+id/employee_show_check"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:paddingBottom="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="请假信息"/>

        <ListView
            android:id="@+id/employee_show_leave"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:paddingBottom="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingLeft="30dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="2dp">
        <Button
            android:id="@+id/employee_show_btn_changeinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改信息"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="608dp" />

        <Button
            android:id="@+id/employee_show_btn_checkin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打卡"
            tools:layout_editor_absoluteX="159dp"
            tools:layout_editor_absoluteY="604dp" />

        <Button
            android:id="@+id/employee_show_btn_leave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请假"
            tools:layout_editor_absoluteX="277dp"
            tools:layout_editor_absoluteY="604dp" />

        <Button
            android:id="@+id/employee_show_btn_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出"
            tools:layout_editor_absoluteX="277dp"
            tools:layout_editor_absoluteY="604dp" />
    </LinearLayout>
<!--    </ScrollView>-->

</LinearLayout>