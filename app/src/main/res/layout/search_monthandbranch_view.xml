<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:layout_marginTop="60dp"
        android:id="@+id/search_monthandbranch_number1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="指定月份:"
        android:textColor="#000"
        android:textSize="20dp" />
    <EditText
        android:layout_alignBottom="@+id/search_monthandbranch_number1"
        android:layout_toRightOf="@+id/search_monthandbranch_number1"
        android:id="@+id/search_monthandbranch_month"
        android:hint="YYYYMM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" />
    <TextView
        android:id="@+id/search_monthandbranch_number2"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_monthandbranch_number1"
        android:padding="10dp"
        android:text="指定部门:"
        android:textColor="#000"
        android:textSize="20sp" />
    <EditText
        android:layout_alignBottom="@id/search_monthandbranch_number2"
        android:layout_toRightOf="@+id/search_monthandbranch_number2"
        android:id="@+id/search_monthandbranch_branch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" />

</RelativeLayout>