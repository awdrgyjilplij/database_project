<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BranchShowActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#08E1EA"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="2dp">

            <TextView
                android:id="@+id/branch_show_name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="branchname"
                tools:layout_editor_absoluteX="27dp"
                tools:layout_editor_absoluteY="31dp" />

            <TextView
                android:id="@+id/branch_show_branchID"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="branchID"
                tools:layout_editor_absoluteX="211dp"
                tools:layout_editor_absoluteY="31dp" />

            <Button
                android:id="@+id/branch_show_btn_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="管理公司"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#08E1EA"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="2dp">

            <TextView
                android:id="@+id/branch_show_branchdescription"
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:ems="10"
                android:focusableInTouchMode="false"
                android:text="branchdescription"
                tools:layout_editor_absoluteX="27dp"
                tools:layout_editor_absoluteY="111dp" />

            <TextView
                android:id="@+id/branch_show_branchmanager"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:focusableInTouchMode="false"
                android:text="branchmanager"
                tools:layout_editor_absoluteX="214dp"
                tools:layout_editor_absoluteY="109dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="人员信息"/>

        <ListView
            android:id="@+id/branch_show_employeeinfo"
            android:layout_width="match_parent"
            android:layout_height="425dp"
            android:paddingBottom="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="2dp">
        <Button
            android:id="@+id/branch_show_btn_changeinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改信息"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="608dp" />

        <Button
            android:id="@+id/branch_show_btn_checksalary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审批工资"
            tools:layout_editor_absoluteX="159dp"
            tools:layout_editor_absoluteY="604dp" />

        <Button
            android:id="@+id/branch_show_btn_checkleave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审批请假"
            tools:layout_editor_absoluteX="277dp"
            tools:layout_editor_absoluteY="604dp" />

        <Button
            android:id="@+id/branch_show_btn_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的信息"
            tools:layout_editor_absoluteX="277dp"
            tools:layout_editor_absoluteY="604dp" />
    </LinearLayout>


</LinearLayout>